        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="Precio"
            app:layout_constraintBottom_toBottomOf="@+id/fotocliente"
            app:layout_constraintStart_toEndOf="@+id/fotocliente"
            tools:layout_conversion_absoluteHeight="731dp"
            tools:layout_conversion_absoluteWidth="0dp" />

        <TextView
            android:id="@+id/NombreListaProductosTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="NombreProducto"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/fotocliente"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/CodigoListaProductosTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
